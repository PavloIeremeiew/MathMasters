.progress-container {    
    padding: 0.7% 1%;
    width: 100%;
    height: 100%;
    background-color: rgb(65, 37, 85);
    border-radius: 20px;
}

.progress-bar {
    width: 100%;
    height: 100%;
    background-color: rgb(228, 255, 0);
    border-radius: 17px;
    padding: 2px 5px;
}
.progress-bar-glare {
    width: 97%;
    height: 40%;
    background-color: #EFEBAA;
    border-radius: 7px;
    align-self: center;
}